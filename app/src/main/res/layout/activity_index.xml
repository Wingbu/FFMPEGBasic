<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wingbu.ffmpegbasic.IndexActivity">

    <Button
        android:id="@+id/btn_index_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="play raw file music" />
    <Button
        android:id="@+id/btn_index_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OpenSL play music" />

    <Button
        android:id="@+id/btn_index_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FFMpeg play video only" />
    <Button
        android:id="@+id/btn_index_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FFMpeg play video and music" />
    <Button
        android:id="@+id/btn_index_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VideoView play video and music" />
    <Button
        android:id="@+id/btn_index_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="index-6" />

</LinearLayout>
